<launch>
	<arg name="use_imu" default="true" doc="use imu in kubot base"/>
	<arg name="use_odom" default="true" doc="use odom in kubot base"/>

  <arg name="model" default="$(env KUBOT_MODEL)" doc="model type [kubot2, wagv, aider ,neuronbot2 ,galiray2]"/>
  <arg name="lidar" default="$(env KUBOT_LIDAR)" doc="model type [non-lidar, rplidar-a1, rplidar-a2, rplidar-a3, rplidar-s1, eai-x4, eai-g4, xtion, kinectV1, kinectV2, astra, eai-x4, d435i, sick-tim551, hokuyo-123, two-rplidar-a2 ]"/>
  <arg name="sensor" default="$(env KUBOT_3DSENSOR)" doc="model type [non-3dsensor, xtion, astra, kinectV1, kinectV2, d435i]"/>

	<!-- KUBOT DRIVER -->
  <include file="$(find kubot_bringup)/launch/bringup_with_imu.launch"/>

	<!-- KUBOT MODEL -->
	<include file="$(find kubot_bringup)/launch/model.launch"/>

	<!-- 2D LIDAR -->
	<include file="$(find kubot_lidar)/launch/$(arg lidar).launch"/>

	<!-- 3D SENSOR -->
	<include file="$(find kubot_3dsensor)/launch/$(arg 3dsensor).launch"/>
</launch>
